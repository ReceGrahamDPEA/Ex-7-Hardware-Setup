<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    Slider
        id: speed_slider
        center_y: root.height * -0.30
        min: 50
        max: 6400
        step: 50
        oreintation: "veritcal"
        text: "position"
        sensitivity: 'handle'

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * -.45
        y: root.height * -.40
        text: str(speed_slider.value)
        color: .5, .25, .25, 1

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .255, .167, .45, 1
        text: "Get position"
        on_press: root.get_pos()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .255, .167, .45, 1
        text: "testing"
        on_press:

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .3, .4, .5, 1
        text: "move"
        on_press: root.move()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "soft_stop"
        on_press: root.soft_stop()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.75
        background_color: 0,0,0,0
        color: .8, .4, .1, 1
        text: "direction change"
        on_press: root.change_direction()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.25
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .75, .1, .5, 1
        text: "go home"
        on_press: root.go_home()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.75
        background_color: 0,0,0,0
        color: .6, .4, .5, 1
        text: "FREE THEM!"
        on_press: root.free_all()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.75
        center_y: root.height * 0.25
        background_color: 0,0,0,0
        color: .5, .4, .4, 1
        text: "home"
        on_press: root.set_home()


    DPEAButton:
        # Quit button
        size: 50, 50
        center_x: root.width * 0.98
        center_y: root.height * 0.02

        background_color: 0,0,0,0
        color: 0, 0, 0, 1

        text: ""
        on_press: root.exit_program()

    DPEAButton:
        size: 100, 100
        center_x: root.width * 0.5
        center_y: root.height * 0.90
        background_color: 0,0,0,0
        color: .6, .2, .3, 1
        text: "THE DANCE"
        on_press: root.the_dance()

    Label:
        size: 50, 50
        id: speed_sliderPosition
        x: root.width * .45
        y: root.height * .40
        text: str(root.position)
        color: .8, .25, .5, 1

